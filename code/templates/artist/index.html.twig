{% extends 'base.html.twig' %}

{% block title %}Liste des artistes{% endblock %}

{% block body %}
   <div class="container">
       <div class="part">
           <a class="btn btn-primary" href="{{ path('app_artist_new') }}">Créer un nouvel artiste</a>
       </div>
       {% for artist in artists%}
       <div class="part">
           <div class="card mb-3" style="max-width: 540px;">
               <div class="row g-0">
                   <div class="col-md-4">
                       {% if artist.photo == null %}
                       <img src="https://via.placeholder.com/200" class="img-fluid rounded-start" alt="...">
                       {% else %}
                       <img src="{{ asset('/uploads/'~artist.photo.name) }}" class="img-fluid rounded-start" alt="...">
                       {% endif %}
                   </div>
                   <div class="col-md-8">
                       <div class="card-body">
                           <h5 class="card-title">{{ artist.name }}</h5>
                           <p class="card-text"><a href="{{ path('app_artist_show', {'id': artist.id}) }}" class="btn btn-dark btn-sm">Détails</a></p>

                       </div>
                   </div>
               </div>
           </div>
       </div>
       {% else %}
       Pas d'artistes enregistrés
       {% endfor %}
   </div>
{% endblock %}
